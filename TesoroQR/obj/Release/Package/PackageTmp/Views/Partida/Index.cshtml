@model IEnumerable<TesoroQR.Models.Tesoro.Partida>
@using TesoroQR.Models.Tesoro

@{
    ViewBag.Title = "Indice Partidas";
}

<h2>Gestion de Partidas</h2>

<p>
    @Html.ActionLink("Create New", "Create" )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PartidaID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.PartidaID }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.PartidaID }) |
            @Html.ActionLink("Gestionar Circuitos", "Index","Circuito", new { id = item.PartidaID }, null)

        </td>
    </tr>
}

</table>
