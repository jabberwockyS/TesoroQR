@model IEnumerable<TesoroQR.Models.Tesoro.Usuario>

@{
    ViewBag.Title = "ListarJugadores";
}

<h2>Lista de Jugadores de la partida</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
       
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        
       
        <td>
           
            @Html.ActionLink("Ver Avances", "ListarAvancePorJugador", new { jugadorID = item.UsuarioID })
        </td>
    </tr>
}

</table>
