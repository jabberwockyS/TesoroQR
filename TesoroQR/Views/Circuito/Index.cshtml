@model IEnumerable<TesoroQR.Models.Tesoro.Circuito>
@using TesoroQR.Models.Tesoro;

@{
    ViewBag.Title = "Index";
}
<h2>Gestion de Circuitos de la Partida de la fecha  </h2>

<p>
    @Html.ActionLink("Agregar Nuevo Circuito", "Create"@*, new { id = @Model.First().Partida.PartidaID }*@)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CircuitoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CircuitoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CircuitoID }) |
            @Html.ActionLink("Gestionar Pistas", "Index","Pistas", new { id = item.CircuitoID }, null)
        </td>
    </tr>
}

</table>
